<Window x:Class="App.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App"
        mc:Ignorable="d"
        Title="MainWindow" Height="327" Width="660" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="76*"/>
            <RowDefinition Height="175*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,91,0,0">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Логин:" FontSize="20" Margin="0 0 10 0"/>
                <TextBlock Text="Пароль:" FontSize="20" Margin="0 0 10 0"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Width="152" Height="48">
                <TextBox x:Name="login" Margin="0 0 0 12" />
                <TextBox x:Name="pas"/>
            </StackPanel>
        </StackPanel>
        <Button Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Войти" Click="Button_Click"/>
    </Grid>
</Window>
